        </ComboBox>-->
        <DatePicker
                    Grid.Row="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="#33E5E5E5"
                    BorderThickness="1" 
                    BorderBrush="#FF1D3370"
                    Height="32"
                    Width="215"
                    Foreground="{x:Null}"
                    Margin="601 0 0 0" 
                    FontFamily="/WarehouseProject;component/Montserrat/#Montserrat Medium">
            <DatePicker.Resources>
                <Style 
                        TargetType="Border">
                    <Setter 
                            Property="CornerRadius"
                            Value="15"/>
                </Style>
            </DatePicker.Resources>
        </DatePicker>
        <TextBox
            x:Name="txtPatronymic"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="#33E5E5E5"
            BorderThickness="1" 
            BorderBrush="#FF1D3370"
            Height="32"
            Width="215"
            Margin="168 0 0 10"
            Grid.Row="3"
            Foreground="{x:Null}"  >
            <TextBox.Resources>
                <Style 
                       TargetType="Border">
                    <Setter 
                            Property="CornerRadius"
                            Value="15"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox
            x:Name="txtNameProduct"
            Grid.Row="4"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="#33E5E5E5"
            BorderThickness="1" 
            BorderBrush="#FF1D3370"
            Height="32"
            Width="215"
            Margin="168 0 0 350"
            Grid.RowSpan="2"
            Foreground="{x:Null}">
            <TextBox.Resources>
                <Style 
                       TargetType="Border">
                    <Setter 
                            Property="CornerRadius"
                            Value="15"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox
            x:Name="txtDescription"
            Grid.Row="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="#33C4C4C4"
            BorderThickness="1" 
            BorderBrush="#FF1D3370"
            Height="114"
            Width="629"
            Margin="168 0 0 100"
           
            Foreground="{x:Null}">
            <TextBox.Resources>
                <Style 
                       TargetType="Border">
                    <Setter 
                            Property="CornerRadius"
                            Value="30"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
